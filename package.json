{
    "name": "play",
    "description": "My amazing LWC app",
    "version": "0.0.1",
    "author": "Naresh",
    "bugs": "https://github.com/Naresh/play/issues",
    "dependencies": {
        "codemirror": "5.54.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "helmet": "^3.23.1",
        "navigo": "^7.1.2"
    },
    "devDependencies": {
        "eslint": "^7.3.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "lwc-services": "^2.1.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/Naresh/play",
    "husky": {
        "hooks": {
            
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "src/**/*.*"
        ],
        "ext": "js",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "exec": "yarn lwc-services build;node scripts/server.js; node ./src/server/api.js;"
    },
    "repository": "Naresh/play",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build ",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "run-p serve:client serve:api",
        "serve:api": "node src/server/api.js",
        "serve:client": "node scripts/server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "run-p watch:client watch:server",
        "watch:client": "lwc-services watch -m development",
        "watch:server": "nodemon",
        "runserver": "node ./src/server/api.js",
        "start": "run-p watch:server runserver"
    }
}
